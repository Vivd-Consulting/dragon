{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "types/*": ["types/*"],
      "helpers/*": ["helpers/*"],
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"]
    },
    "noImplicitAny": false
  },
  "include": ["@types/*.d.ts", "next-env.d.ts", "**/*.ts", "**/*.tsx", "global.d.ts"],
  "exclude": ["node_modules"]
}
